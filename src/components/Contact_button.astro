---
interface Props {
	body: string;
	href: string;
}

const { href, body } = Astro.props;
---
<li>
    <button class="cont_button"><a href={href}>{body}</a></button>
</li>

<style>
    .cont_button {
        border: solid 2px white;
        background-color: black;
        color: white;
        border-radius: 20px;
    }
</style> 